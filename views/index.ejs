<%- include header %>

<% if(locals.success && locals.user) { %>
<div class="alert alert-success" style="display:none;">
	<%= locals.success %>
</div>
<% } %>

<% if(locals.success && locals.success === '登出成功') { %>
<div class="alert alert-success" style="display:none;">
	<%= locals.success %>
</div>
<% } %>


<% if(locals.error) { %>
<div class="alert alert-error" style="display:none;">
	<%= locals.error %>
</div>
<% } %>

<% if(!locals.user) { %>
	<div class="hero-unit">
		<h1>欢迎来到Napblog</h1>
		<p>Napblog是一个基于Node.js的微博系统。</p>
		<p>
			<a class="btn btn-primary btn-large" href="/login">登录</a>
			<a class="btn btn-large" href="/reg">立即注册</a>
		</p>
	</div>
<%  } else { %>
	<% if(locals.success && !locals.user ) { %>
	<div class="alert alert-success" style="display:none;">
		<%= locals.success %>
	</div>
	<% } %>
	<%- partial('say')  %>

	<%- partial('posts', {posts:posts}) %>
<% } %>


<%- include footer %>